{
  "name": "push-manager",
  "private": true,
  "workspaces": [
    "src/shared",
    "src/web",
    "src/server"
  ],
  "scripts": {
    "build:shared": "dotenv -e src/shared/.env yarn workspace @push-manager/shared build",
    "build:web": "dotenv -e src/shared/.env yarn workspace @push-manager/web build",
    "build:server": "dotenv -e src/shared/.env yarn workspace @push-manager/server build",
    "build:all": "yarn build:shared && yarn build:web && yarn build:server",
    "web:dev": "dotenv -e src/shared/.env yarn workspace @push-manager/web dev",
    "server:dev": "dotenv -e src/shared/.env yarn workspace @push-manager/server dev",
    "web:prod": "dotenv -e src/shared/.env yarn workspace @push-manager/web start",
    "server:prod": "dotenv -e src/shared/.env yarn workspace @push-manager/server start",
    "lint": "yarn workspaces run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
