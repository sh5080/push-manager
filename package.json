{
  "name": "push-manager",
  "private": true,
  "workspaces": [
    "src/web",
    "src/server",
    "src/shared"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev:web": "dotenv -e src/shared/.env -- node -e \"process.env.PORT=process.env.NEXT_PUBLIC_FRONTEND_PORT\" && yarn workspace @push-manager/web dev",
    "dev:server": "dotenv -e src/shared/.env yarn workspace @push-manager/server dev",
    "lint": "yarn workspaces run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
